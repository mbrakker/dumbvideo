# YouTube Shorts Factory - Environment Configuration
# Copy this to .env and fill in your credentials

# OpenAI API Key (required)
OPENAI_API_KEY=your-openai-api-key-here

# YouTube API Credentials (required)
YOUTUBE_CLIENT_ID=your-client-id.apps.googleusercontent.com
YOUTUBE_CLIENT_SECRET=your-client-secret
YOUTUBE_REDIRECT_URI=urn:ietf:wg:oauth:2.0:oob

# Database (optional - defaults to SQLite)
DATABASE_URL=sqlite:///data/youtube_shorts.db

# Logging (optional)
LOG_LEVEL=INFO
LOG_FILE=logs/app.log

# FFmpeg path (optional - auto-detects if not specified)
FFMPEG_PATH=c:\programing\market lense\.venv\lib\site-packages 

# Development settings
DEBUG=False
DRY_RUN=False
